# Charger les bibliothèques nécessaires
library(tidyverse)

# Fonction pour lire le fichier FASTA de DADA2 et le diviser en deux fichiers
split_dada2_taxonomy <- function(dada2_file, fasta_output, taxa_output) {
  # Lire le fichier FASTA
  fasta_lines <- readLines(dada2_file, warn = FALSE)
  
  # Vérifier et ajouter une nouvelle ligne à la fin si nécessaire
  if (length(fasta_lines) %% 2 != 0) {
    fasta_lines <- c(fasta_lines, "")
  }
  
  # Initialiser des listes pour stocker les informations
  ids <- c()
  sequences <- c()
  taxa <- c()
  
  # Parcourir les lignes du fichier FASTA
  for (i in seq(1, length(fasta_lines), by = 2)) {
    # Extraire l'en-tête et la séquence
    header <- fasta_lines[i]
    sequence <- fasta_lines[i + 1]
    
    # Extraire la taxonomie et l'identifiant de l'en-tête
    taxon <- gsub("^>", "", header)
    taxon_parts <- strsplit(taxon, ";")[[1]]
    id <- taxon_parts[length(taxon_parts)]
    taxonomy <- paste(taxon_parts[-length(taxon_parts)], collapse = ";")
    
    # Ajouter les informations aux listes
    ids <- c(ids, id)
    sequences <- c(sequences, sequence)
    taxa <- c(taxa, taxonomy)
  }
  
  # Créer un DataFrame pour les séquences
  fasta_df <- data.frame(
    id = ids,
    sequence = sequences,
    stringsAsFactors = FALSE
  )
  
  # Créer un DataFrame pour la taxonomie
  taxa_df <- data.frame(
    id = ids,
    taxonomy = taxa,
    stringsAsFactors = FALSE
  )
  
  # Écrire les séquences au format FASTA
  writeLines(
    paste0(">", fasta_df$id, "\n", fasta_df$sequence),
    con = fasta_output
  )
  
  # Écrire la taxonomie au format TSV
  write.table(taxa_df, taxa_output, sep = "\t", row.names = FALSE, col.names = FALSE, quote = FALSE)
}


# Chemin vers votre fichier de taxonomie DADA2
dada2_file <- "refDADA2.fasta"

# Chemins vers les fichiers de sortie
fasta_output <- "ref_mothur.fasta"
taxa_output <- "ref_mothur.tax"

# Appeler la fonction pour diviser le fichier
split_dada2_taxonomy(dada2_file, fasta_output, taxa_output)
